@model IEnumerable<MiniPorjet.Models.Intervention>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterventionDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Reclamation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstGratuite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontantFacture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Statut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InterventionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reclamation.ReclamationId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EstGratuite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MontantFacture)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.InterventionId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.InterventionId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.InterventionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
